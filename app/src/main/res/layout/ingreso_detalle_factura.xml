<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/cboProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblPrecio"
                android:layout_width="90dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/lblPrecio" />

            <Spinner
                android:id="@+id/cboListaPrecios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewCantidad"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:text="@string/lblCantidad" />

                <EditText
                    android:id="@+id/txtCantidad"
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:inputType="number">
                    <requestFocus />
                </EditText>

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewDevolucion"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:text="@string/lblDevoluciones" />

                <EditText
                    android:id="@+id/txtDevoluciones"
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewRotaciones"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:text="@string/lblRotaciones" />

                <EditText
                    android:id="@+id/txtRotaciones"
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </TableRow>
            <TableRow android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewDescuentoAdicional"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:text="@string/descuento_porcentaje" />

                <EditText
                    android:id="@+id/txtDescuentoAdicional"
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLength="6"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="#fff">

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">

                <TextView
                    android:id="@+id/lblResumen"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:text="@string/lblValorUnitario"
                    android:textStyle="bold"
                    android:background="#e1efea"
                    android:padding="2dp"/>
                <TextView
                    android:id="@+id/lblValorUnitario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="50"
                    android:background="#e1efea"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/lblPrecio" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:text="@string/lblSubtotal"
                    android:textStyle="bold"
                    android:background="#e1efea"
                    android:padding="2dp"/>

                <TextView
                    android:id="@+id/lblSubtotal"
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:text="@string/lblPrecio"
                    android:background="#e1efea"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:text="@string/lblDescuento"
                    android:textStyle="bold"
                    android:background="#e1efea"
                    android:padding="2dp"/>

                <TextView
                    android:id="@+id/lblDescuento"
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:text="@string/lblPrecio"
                    android:background="#e1efea"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:text="@string/lblDevoluciones"
                    android:textStyle="bold"
                    android:background="#e1efea"
                    android:padding="2dp"/>

                <TextView
                    android:id="@+id/lblDevolucion"
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:text="@string/lblPrecio"
                    android:background="#e1efea"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:text="@string/lblIva"
                    android:textStyle="bold"
                    android:background="#e1efea"
                    android:padding="2dp"/>

                <TextView
                    android:id="@+id/lblIva"
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:text="@string/lblPrecio"
                    android:background="#e1efea"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRowIpoConsumo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">

                <TextView
                    android:id="@+id/textViewIpoConsumo"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:text="@string/lblIpoConsumo"
                    android:textStyle="bold"
                    android:background="#e1efea"
                    android:padding="2dp"/>

                <TextView
                    android:id="@+id/lblIpoConsumo"
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:text="@string/lblPrecio"
                    android:background="#e1efea"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:text="@string/lblTotal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:background="#e1efea"
                    android:padding="2dp"/>

                <TextView
                    android:id="@+id/lblTotal"
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:text="@string/lblPrecio"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:background="#e1efea"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>

            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>