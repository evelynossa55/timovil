
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/fondo_login"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/FondoAtras"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="380dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/vehiculo_fondo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <ImageView
            android:id="@+id/imagenFondo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="363dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="19dp"
            android:contentDescription="@string/app_name"
            android:paddingTop="30dp"
            android:paddingBottom="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/personajes_login_app" />

        <TextView
            android:id="@+id/bienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Bienvenido a"
            android:textColor="#cacaca"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/iv_logo_timovil"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_below="@+id/bienvenido"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="1dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/timovil_logo_app">

        </ImageView>

        <LinearLayout
            android:id="@+id/layoutPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logo_timovil"
            android:layout_marginHorizontal="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#0076b8"
            android:orientation="vertical">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="#f0f0f0"
                android:drawableLeft="@drawable/ic_lock"
                android:hint="@string/prompt_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword|number"
                android:maxLines="1"
                android:paddingHorizontal="3dp"
                android:paddingVertical="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20dp" />
        </LinearLayout>


        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutPassword"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_pressed"
            android:text="@string/action_sign_in_register"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_in_button"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="@string/version_actual"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="italic" />

        <LinearLayout
            android:id="@+id/BarraBotones"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnConfigurar"
                style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="left"
                android:background="@drawable/background_botones_login"
                android:drawableLeft="@drawable/icono_configuracion"
                android:fontFamily="sans-serif-black"
                android:text="@string/configurar"
                android:textColor="#0076b8"
                android:textSize="14sp">

            </Button>


            <Button
                android:id="@+id/btnActualzar"
                style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="60dp"
                android:layout_weight="1"
                android:background="@drawable/background_botones_login"
                android:drawableLeft="@drawable/icono_actualizar"
                android:fontFamily="sans-serif-black"
                android:text="@string/actualizar_aplicacion"
                android:textColor="#0076b8"
                android:textSize="13sp"
                android:textStyle="normal" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
